<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dong_fiends"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/frt"
        android:layout_width="55dp"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="100dp"
                android:layout_width="50dp"
                android:layout_height="50dp">
                <ImageView

                    android:src="@drawable/icon_dangnhap"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imagedongfriend">

                </ImageView>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <ImageView
            android:layout_marginTop="35dp"
            android:layout_marginLeft="38dp"
            android:id="@+id/iconhoatdong"
            android:src="@drawable/online_icon"
            android:layout_width="11dp"
            android:layout_height="11dp">

        </ImageView>
    </FrameLayout>

    <TextView


        android:text="textView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_toRightOf="@id/frt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTendongfriend">

    </TextView>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/textViewTendongfriend"
        android:layout_toRightOf="@id/frt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewtinNhandongfriend">

    </TextView>



</RelativeLayout>