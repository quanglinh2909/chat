<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relatilayoutgoiyketban"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="20dp"
                android:text="Những người bạn có thể biết"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/textcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/textcv"
                android:layout_marginTop="20dp"
                android:id="@+id/recyclerViewguiyketban"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recyclerView_friends_frament">

        </androidx.recyclerview.widget.RecyclerView>


    </FrameLayout>


</RelativeLayout>